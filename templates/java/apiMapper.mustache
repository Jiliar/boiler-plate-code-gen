package {{packageName}};

import {{domain_model}}.{{entityName}};
import {{infra_entity}}.{{entityName}}Dbo;
import {{application_dto}}.*;
import org.mapstruct.Mapper;
import org.mapstruct.Mapping;
import org.mapstruct.factory.Mappers;
import java.time.Instant;
import java.time.LocalDateTime;
import java.time.ZoneOffset;
import java.util.List;
import java.math.BigDecimal;

/**
 * MapStruct mapper for {{entityName}} transformations between layers.
 * <p>
 * This mapper handles conversions between:
 * - Domain models (pure business objects)
 * - DTOs (data transfer objects for API communication)
 * - DBOs (database objects for persistence)
 * </p>
 * <p>
 * Includes custom methods for timestamp conversion between Double and LocalDateTime.
 * </p>
 * 
 * @author {{author}}
 * @version {{version}}
 */
@Mapper(componentModel = "spring")
public interface {{classname}} {

    {{classname}} INSTANCE = Mappers.getMapper({{classname}}.class);

    // Domain to DBO mappings
    @Mapping(source = "userId", target = "id")
    {{entityName}}Dbo toDbo({{entityName}} domain);
    
    @Mapping(source = "id", target = "userId")
    {{entityName}} toDomain({{entityName}}Dbo dbo);
    List<{{entityName}}> toDomainList(List<{{entityName}}Dbo> dbos);

    // Domain to DTO mappings
    
    @Mapping(target = "userId", expression = "java(java.util.UUID.randomUUID().toString())")
    @Mapping(target = "status", constant = "ACTIVE")
    @Mapping(target = "createdAt", expression = "java(java.time.Instant.now().toString())")
    @Mapping(target = "updatedAt", ignore = true)
    {{entityName}} fromCreateRequest(CreateUserRequestContent request);
    @Mapping(target = "updatedAt", expression = "java(java.time.Instant.now().toString())")
    @Mapping(target = "userId", ignore = true)
    @Mapping(target = "status", ignore = true)
    @Mapping(target = "createdAt", ignore = true)
    {{entityName}} fromUpdateRequest(UpdateUserRequestContent request);
    
    // DTO to Domain mappings
    List<{{entityName}}Response> toResponseList(List<{{entityName}}> domains);
    
    // Individual response mapping
    {{entityName}}Response toResponse({{entityName}} domain);
    
    // Response mappings for DTOs
    default CreateUserResponseContent toCreateResponse({{entityName}} domain) {
        if (domain == null) return null;
        return CreateUserResponseContent.builder()
            .userId(domain.getUserId())
            .username(domain.getUsername())
            .email(domain.getEmail())
            .firstName(domain.getFirstName())
            .lastName(domain.getLastName())
            .status(domain.getStatus())
            .createdAt(domain.getCreatedAt())
            .updatedAt(domain.getUpdatedAt())
            .build();
    }
    
    default GetUserResponseContent toGetResponse({{entityName}} domain) {
        if (domain == null) return null;
        return GetUserResponseContent.builder()
            .userId(domain.getUserId())
            .username(domain.getUsername())
            .email(domain.getEmail())
            .firstName(domain.getFirstName())
            .lastName(domain.getLastName())
            .status(domain.getStatus())
            .createdAt(domain.getCreatedAt())
            .updatedAt(domain.getUpdatedAt())
            .build();
    }
    
    default UpdateUserResponseContent toUpdateResponse({{entityName}} domain) {
        if (domain == null) return null;
        return UpdateUserResponseContent.builder()
            .userId(domain.getUserId())
            .username(domain.getUsername())
            .email(domain.getEmail())
            .firstName(domain.getFirstName())
            .lastName(domain.getLastName())
            .status(domain.getStatus())
            .createdAt(domain.getCreatedAt())
            .updatedAt(domain.getUpdatedAt())
            .build();
    }

    // List response mapping
    default ListUsersResponseContent toListResponse(List<{{entityName}}> domains) {
        if (domains == null) return null;
        return ListUsersResponseContent.builder()
            .users(toResponseList(domains))
            .page(BigDecimal.valueOf(1))
            .size(BigDecimal.valueOf(domains.size()))
            .total(BigDecimal.valueOf(domains.size()))
            .totalPages(BigDecimal.valueOf(1))
            .build();
    }
    
    // No timestamp conversion needed - all layers use String
}